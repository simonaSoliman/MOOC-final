<%= form_for(@lecture) do |f| %>
  <% if @lecture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

      <ul>
      <% @lecture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="field" class="form-group">
    <%= f.label :attachment %><br>
    <%= f.file_field :attachment %>
    <% if f.object.attachment? %>
      <%= file_tag f.object.attachment.thumb.url %>
      <%= f.label :remove_file %>
      <%= f.check_box :remove_file %>
    <% end %>
  </div>

  <div class="field" class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field" class="form-group">
    <%= f.label :user_id %><br>
    <%= current_user.try(:email) %>
    <!-- <%= f.text_field :user_id %> -->
  <div class="field" class="form-group">
    <%= f.label :course_id %><br>
    <%= f.collection_select :course_id, Course.all, :id, :title %>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
